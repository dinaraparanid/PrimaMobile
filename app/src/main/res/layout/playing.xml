<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="70dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/playing_toolbar"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:background="?attr/colorPrimary"
        android:clickable="true"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playing_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/playing_album_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@mipmap/album_default_round"
                app:civ_border_color="@color/black"
                app:civ_border_width="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/playing_track_title"
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:ellipsize="marquee"
                android:fontFamily="serif"
                android:minLines="1"
                android:singleLine="true"
                android:text="@string/track_title"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/playing_prev_track"
                app:layout_constraintStart_toEndOf="@+id/playing_album_image"
                app:layout_constraintTop_toTopOf="parent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:marqueeRepeatLimit ="marquee_forever" />

            <TextView
                android:id="@+id/playing_track_artists"
                style="@android:style/Widget.TextView.PopupMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:ellipsize="marquee"
                android:focusable="true"
                android:fontFamily="serif"
                android:gravity="start"
                android:minLines="1"
                android:singleLine="true"
                android:text="@string/artists"
                android:textSize="15sp"
                app:layout_constraintEnd_toStartOf="@+id/playing_prev_track"
                app:layout_constraintStart_toStartOf="@+id/playing_track_title"
                app:layout_constraintTop_toBottomOf="@+id/playing_track_title"
                android:focusableInTouchMode="true"
                android:scrollHorizontally="true"
                android:marqueeRepeatLimit ="marquee_forever" />

            <ImageButton
                android:id="@+id/playing_next_track"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="5dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/next_track"
                android:focusable="true"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/ic_media_next" />

            <ImageButton
                android:id="@+id/playing_play_button"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/play_button"
                android:focusable="true"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/playing_next_track"
                app:layout_constraintEnd_toStartOf="@+id/playing_next_track"
                app:layout_constraintTop_toTopOf="@+id/playing_next_track"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/ic_media_pause" />

            <ImageButton
                android:id="@+id/playing_prev_track"
                android:layout_width="50dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/previous_track"
                android:focusable="true"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/playing_play_button"
                app:layout_constraintEnd_toStartOf="@+id/playing_play_button"
                app:layout_constraintTop_toTopOf="@+id/playing_play_button"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/ic_media_previous" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/track_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/track_settings_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/track_settings_button"
            android:focusable="true"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/three_dots" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/track_settings_button">

            <ImageView
                android:id="@+id/album_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C8BFE7"
                android:contentDescription="@string/album_picture"
                android:marqueeRepeatLimit="marquee_forever"
                app:srcCompat="@drawable/album_default" />
        </androidx.cardview.widget.CardView>

        <SeekBar
            android:id="@+id/track_playing_bar"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawingCacheQuality="high"
            android:progressTint="?attr/colorPrimary"
            android:saveEnabled="true"
            android:thumbTint="?attr/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="@string/current_time"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/track_playing_bar"
            app:layout_constraintTop_toBottomOf="@+id/track_playing_bar" />

        <TextView
            android:id="@+id/track_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="serif"
            android:text="@string/track_length"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/track_playing_bar"
            app:layout_constraintTop_toBottomOf="@+id/track_playing_bar" />

        <TextView
            android:id="@+id/track_title_big"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:maxLength="30"
            android:minLines="1"
            android:text="@string/track_title"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="@+id/track_playing_bar"
            app:layout_constraintStart_toStartOf="@+id/track_playing_bar"
            app:layout_constraintTop_toBottomOf="@+id/current_time"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"/>

        <TextView
            android:id="@+id/artists_album"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:gravity="center"
            android:maxLength="30"
            android:maxLines="1"
            android:minLines="1"
            android:singleLine="true"
            android:text="@string/artists_album"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/track_title_big"
            app:layout_constraintStart_toStartOf="@+id/track_title_big"
            app:layout_constraintTop_toBottomOf="@+id/track_title_big" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/primary_buttons"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="45dp"
            app:layout_constraintBottom_toTopOf="@+id/secondary_buttons"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageButton
                android:id="@+id/play_button"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/play_button"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/play"
                tools:srcCompat="@drawable/play" />

            <ImageButton
                android:id="@+id/previous_track_button"
                style="@style/Widget.AppCompat.ImageButton"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/previous_track"
                android:focusable="true"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/play_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/play_button"
                app:srcCompat="@drawable/prev_track" />

            <ImageButton
                android:id="@+id/next_track_button"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/next_track"
                android:focusable="true"
                android:scaleType="fitCenter"
                app:layout_constraintBottom_toBottomOf="@+id/play_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/play_button"
                app:srcCompat="@drawable/next_track" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/secondary_buttons"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/primary_buttons"
            app:layout_constraintStart_toStartOf="@+id/primary_buttons">

            <ImageButton
                android:id="@+id/repeat_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|start|top|end"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/repeat_track_s"
                android:focusable="true"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/repeat" />

            <ImageButton
                android:id="@+id/track_lyrics"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|start|top|end"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="true"
                android:clickable="true"
                android:contentDescription="@string/track_lyrics"
                android:drawingCacheQuality="high"
                android:fitsSystemWindows="true"
                android:focusable="true"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@id/repeat_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/repeat_button"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/text" />

            <ImageButton
                android:id="@+id/like_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|start|top|end"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="45dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/like_track"
                android:focusable="true"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/playlist_button"
                app:layout_constraintStart_toEndOf="@+id/repeat_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/heart" />

            <ImageButton
                android:id="@+id/playlist_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="45dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:clickable="true"
                android:contentDescription="@string/current_playlist"
                android:focusable="true"
                android:padding="5dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/track_lyrics"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/playlist" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/return_button"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:contentDescription="@string/to_track_list"
            android:focusable="true"
            android:padding="5dp"
            android:paddingStart="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingRight="5dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="@+id/track_settings_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/track_settings_button"
            app:srcCompat="@drawable/arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>