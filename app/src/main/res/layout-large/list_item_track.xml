<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="view_model"
            type="com.dinaraparanid.prima.viewmodels.mvvm.TrackItemViewModel" />

    <variable
        name="track"
        type="com.dinaraparanid.prima.core.Track" />

    <variable
        name="tracks"
        type="com.dinaraparanid.prima.core.Track[]" />
    </data>

    <carbon.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackVertical="@null"
        app:carbon_elevation="5dp"
        app:carbon_elevationAmbientShadowColor="@{view_model.params.primaryColor}"
        app:carbon_elevationShadowColor="@{view_model.params.primaryColor}"
        app:carbon_elevationSpotShadowColor="@{view_model.params.primaryColor}"
        app:carbon_rippleColor="@{view_model.params.fontColor}"
        app:carbon_rippleStyle="over">

        <TextView
            android:id="@+id/track_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackVertical="@null"
            android:singleLine="true"
            android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
            android:text="@{view_model.getTitle(track)}"
            android:textColor="@{view_model.getTextColor(tracks, view_model.num - 1)}"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="23sp"
            android:paddingTop="8dp"
            app:layout_constraintBottom_toTopOf="@id/track_author_album"
            app:layout_constraintEnd_toStartOf="@+id/track_item_settings"
            app:layout_constraintStart_toEndOf="@+id/track_number"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/track_author_album"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:breakStrategy="simple"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackVertical="@null"
            android:singleLine="true"
            android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
            android:text="@{view_model.getArtistAndAlbum(track)}"
            android:textColor="@{view_model.getTextColor(tracks, view_model.num - 1)}"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="18sp"
            android:paddingBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/track_item_settings"
            app:layout_constraintStart_toEndOf="@+id/track_number"
            app:layout_constraintTop_toBottomOf="@id/track_title" />

        <TextView
            android:id="@+id/track_number"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:breakStrategy="simple"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackVertical="@null"
            android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
            android:text="@{view_model.getNumber()}"
            android:textColor="@{view_model.params.primaryColor}"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <carbon.widget.ImageView
            android:id="@+id/track_item_settings"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:background="@null"
            android:clickable="true"
            android:contentDescription="@string/track_item_settings"
            android:focusable="true"
            android:padding="15dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:scaleType="fitCenter"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackHorizontal="@null"
            android:scrollbarTrackVertical="@null"
            app:carbon_rippleColor="@{view_model.params.primaryColor}"
            app:carbon_rippleStyle="over"
            app:carbon_tint="@{view_model.params.primaryColor}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:carbon_src="@drawable/three_dots" />

    </carbon.widget.ConstraintLayout>
</layout>