<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="view_model"
            type="com.dinaraparanid.prima.viewmodels.mvvm.MP3ConvertViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <carbon.widget.ConstraintLayout
                android:id="@+id/convert_youtube_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <carbon.widget.TextView
                    android:id="@+id/paste_url_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="5dp"
                    android:breakStrategy="simple"
                    android:elegantTextHeight="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:minLines="1"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:singleLine="true"
                    android:text="@string/paste_url_text"
                    android:textAlignment="center"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:carbon_animateColorChanges="true"
                    app:carbon_elevation="20dp"
                    app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <carbon.widget.ImageView
                    android:id="@+id/clear_input"
                    android:layout_width="40dp"
                    android:layout_height="0dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    app:carbon_animateColorChanges="true"
                    app:carbon_cornerRadius="15dp"
                    app:carbon_elevation="20dp"
                    app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_rippleColor="@{view_model.params.primaryColor}"
                    app:carbon_rippleStyle="over"
                    app:carbon_src="@drawable/carbon_clear"
                    app:carbon_tint="@{view_model.params.primaryColor}"
                    app:layout_constraintBottom_toBottomOf="@+id/paste_url_edit"
                    app:layout_constraintEnd_toStartOf="@+id/button"
                    app:layout_constraintTop_toTopOf="@+id/paste_url_edit" />

                <EditText
                    android:id="@+id/paste_url_edit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="20dp"
                    android:autofillHints="@string/paste_video_url_here"
                    android:background="@android:color/transparent"
                    android:elegantTextHeight="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="start|center_vertical"
                    android:hint="@string/paste_video_url_here"
                    android:padding="5dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:singleLine="true"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@{view_model.params.fontColor}"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toStartOf="@+id/clear_input"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paste_url_text" />

                <carbon.widget.Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="5dp"
                    android:background="@{view_model.params.primaryColor}"
                    android:breakStrategy="simple"
                    android:clickable="true"
                    android:focusable="true"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:text="@string/download"
                    android:textAllCaps="false"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:onClick="@{() -> view_model.onPasteUrlButtonClicked()}"
                    app:carbon_animateColorChanges="true"
                    app:carbon_cornerRadius="15dp"
                    app:carbon_elevation="30dp"
                    app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_rippleColor="@{view_model.params.primaryColor}"
                    app:carbon_rippleStyle="over"
                    app:carbon_tint="@{view_model.params.primaryColor}"
                    app:layout_constraintBottom_toBottomOf="@+id/paste_url_edit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paste_url_text" />

                <carbon.widget.TextView
                    android:id="@+id/converter_supported_sites"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:elegantTextHeight="true"
                    android:focusable="true"
                    android:gravity="start|center_vertical"
                    android:padding="5dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:singleLine="true"
                    android:text="@string/converter_supported_sites"
                    android:textAllCaps="true"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="23sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    android:onClick="@{() -> view_model.onSupportedSitesButtonClicked()}"
                    app:carbon_animateColorChanges="true"
                    app:carbon_elevation="20dp"
                    app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:carbon_rippleColor="@{view_model.params.primaryColor}"
                    app:carbon_rippleStyle="over"
                    app:carbon_tint="@{view_model.params.primaryColor}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/paste_url_edit" />

                <carbon.widget.TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@android:color/transparent"
                    android:elegantTextHeight="true"
                    android:gravity="start|center_vertical"
                    android:padding="5dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:singleLine="true"
                    android:text="@string/how_to_use_it"
                    android:textAllCaps="true"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="23sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:carbon_animateColorChanges="true"
                    app:carbon_elevation="20dp"
                    app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/converter_supported_sites" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    android:elegantTextHeight="true"
                    android:gravity="start|center_vertical"
                    android:padding="5dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:text="@string/how_to_use_1"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:elegantTextHeight="true"
                    android:gravity="start|center_vertical"
                    android:padding="5dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:text="@string/how_to_use_2"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:elegantTextHeight="true"
                    android:gravity="start|center_vertical"
                    android:padding="5dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:text="@string/how_to_use_3"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView5" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:elegantTextHeight="true"
                    android:gravity="start|center_vertical"
                    android:padding="5dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackHorizontal="@null"
                    android:scrollbarTrackVertical="@null"
                    android:text="@string/how_to_use_4"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="20sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView6" />

            </carbon.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
</layout>