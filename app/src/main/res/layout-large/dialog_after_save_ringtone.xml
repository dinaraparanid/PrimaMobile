<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="view_model"
            type="com.dinaraparanid.prima.viewmodels.mvvm.ViewModel" />
    </data>

    <carbon.widget.LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <carbon.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:breakStrategy="simple"
            android:elegantTextHeight="true"
            android:gravity="center_horizontal"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackHorizontal="@null"
            android:scrollbarTrackVertical="@null"
            android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
            android:textColor="@{view_model.params.primaryColor}"
            android:text="@string/what_to_do_with_ringtone"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
            app:carbon_elevation="20dp"
            app:carbon_elevationAmbientShadowColor="@{view_model.params.primaryColor}"
            app:carbon_elevationShadowColor="@{view_model.params.primaryColor}"
            app:carbon_elevationSpotShadowColor="@{view_model.params.primaryColor}"
            app:carbon_tint="@{view_model.params.primaryColor}"/>

        <carbon.widget.Button
            android:id="@+id/button_make_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15sp"
            android:background="@{view_model.params.primaryColor}"
            android:clickable="true"
            android:focusable="true"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackHorizontal="@null"
            android:scrollbarTrackVertical="@null"
            android:text="@string/make_default_ringtone"
            android:textAllCaps="false"
            android:textColor="@{view_model.params.fontColor}"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:elegantTextHeight="true"
            app:carbon_animateColorChanges="true"
            app:carbon_cornerRadius="20dp"
            app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
            app:carbon_rippleColor="@{view_model.params.primaryColor}"
            app:carbon_rippleStyle="over"
            app:carbon_tint="@{view_model.params.primaryColor}" />

        <carbon.widget.Button
            android:id="@+id/button_choose_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="15sp"
            android:background="@{view_model.params.primaryColor}"
            android:text="@string/choose_contact_ringtone"
            android:clickable="true"
            android:focusable="true"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackHorizontal="@null"
            android:scrollbarTrackVertical="@null"
            android:textAllCaps="false"
            android:textColor="@{view_model.params.fontColor}"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:elegantTextHeight="true"
            app:carbon_animateColorChanges="true"
            app:carbon_cornerRadius="20dp"
            app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
            app:carbon_rippleColor="@{view_model.params.primaryColor}"
            app:carbon_rippleStyle="over"
            app:carbon_tint="@{view_model.params.primaryColor}"/>

        <carbon.widget.Button
            android:id="@+id/button_do_nothing"
            android:text="@string/do_nothing_with_ringtone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginBottom="15sp"
            android:background="@{view_model.params.primaryColor}"
            android:clickable="true"
            android:focusable="true"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackHorizontal="@null"
            android:scrollbarTrackVertical="@null"
            android:textAllCaps="false"
            android:textColor="@{view_model.params.fontColor}"
            android:textColorHighlight="@null"
            android:textColorHint="@null"
            android:textColorLink="@null"
            android:textCursorDrawable="@null"
            android:textSize="20sp"
            android:elegantTextHeight="true"
            app:carbon_animateColorChanges="true"
            app:carbon_cornerRadius="20dp"
            app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
            app:carbon_rippleColor="@{view_model.params.primaryColor}"
            app:carbon_rippleStyle="over"
            app:carbon_tint="@{view_model.params.primaryColor}"/>

    </carbon.widget.LinearLayout>
</layout>
