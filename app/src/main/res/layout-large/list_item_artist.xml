<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:carbon_elevation="4dp"
    app:carbon_elevationAmbientShadowColor="?attr/colorPrimary"
    app:carbon_elevationShadowColor="?attr/colorPrimary"
    app:carbon_elevationSpotShadowColor="?attr/colorPrimary"
    app:carbon_rippleColor="?attr/colorOnError"
    app:carbon_rippleStyle="over">

    <carbon.widget.TextView
        android:id="@+id/artist_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:breakStrategy="simple"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        android:src="@null"
        android:text="@null"
        android:textColor="?attr/colorPrimary"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="20sp"
        app:carbon_rippleColor="?attr/colorPrimary"
        app:carbon_rippleStyle="over"
        app:carbon_tint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/artist_name"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:breakStrategy="simple"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="sans-serif"
        android:gravity="start"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackVertical="@null"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@null"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="?attr/colorOnError"
        android:textColorHighlight="@null"
        android:textColorHint="@null"
        android:textColorLink="@null"
        android:textCursorDrawable="@null"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/artist_item_settings"
        app:layout_constraintStart_toEndOf="@+id/artist_image"
        app:layout_constraintTop_toTopOf="parent" />

    <carbon.widget.ImageView
        android:id="@+id/artist_item_settings"
        android:layout_width="30dp"
        android:layout_height="0dp"
        android:layout_marginEnd="5dp"
        android:background="@null"
        android:clickable="true"
        android:contentDescription="@string/artist_item_settings"
        android:focusable="true"
        android:padding="15dp"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackHorizontal="@null"
        android:scrollbarTrackVertical="@null"
        app:carbon_rippleColor="?attr/colorPrimary"
        app:carbon_rippleStyle="over"
        app:carbon_tint="?attr/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/three_dots" />

</carbon.widget.ConstraintLayout>