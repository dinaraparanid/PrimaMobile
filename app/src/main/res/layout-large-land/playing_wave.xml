<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="view_model"
            type="com.dinaraparanid.prima.viewmodels.mvvm.MainActivityViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/playing_wave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@{view_model.params.secondaryColor}"
            android:clickable="true"
            android:focusable="true"
            android:longClickable="true"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackHorizontal="@null"
            android:scrollbarTrackVertical="@null"
            android:visibility="invisible"
            app:behavior_hideable="false"
            app:behavior_peekHeight="70dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/playing_toolbar_wave"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:background="@{view_model.params.primaryColor}"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="?attr/actionBarSize"
                android:onClick="@{() -> view_model.liftPlayingMenu()}"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackVertical="@null"
                android:theme="?attr/actionBarTheme"
                app:collapseIcon="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:subtitleTextColor="@null"
                app:titleTextColor="@null">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/playing_layout_wave"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    tools:layout_editor_absoluteX="16dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/playing_album_image_wave"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onPlayingAlbumImageClicked()}"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        android:src="@mipmap/album_default_round"
                        app:civ_border_color="@color/real_black"
                        app:civ_border_width="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/playing_track_title_wave"
                        style="@android:style/Widget.TextView.PopupMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="5dp"
                        android:breakStrategy="simple"
                        android:clickable="true"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:gravity="start|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:minLines="1"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@{view_model.params.fontColor}"
                        android:textColorHighlight="@null"
                        android:textColorHint="@null"
                        android:textColorLink="@null"
                        android:textCursorDrawable="@null"
                        android:textSize="20sp"
                        android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                        app:layout_constraintEnd_toStartOf="@+id/playing_prev_track_wave"
                        app:layout_constraintStart_toEndOf="@+id/playing_album_image_wave"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/playing_track_artists_wave"
                        style="@android:style/Widget.TextView.PopupMenu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:breakStrategy="simple"
                        android:clickable="true"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif"
                        android:gravity="start|center_vertical"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:minLines="1"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:text="@null"
                        android:textColor="@{view_model.params.fontColor}"
                        android:textColorHighlight="@null"
                        android:textColorHint="@null"
                        android:textColorLink="@null"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"
                        android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                        app:layout_constraintEnd_toStartOf="@+id/playing_prev_track_wave"
                        app:layout_constraintStart_toStartOf="@+id/playing_track_title_wave"
                        app:layout_constraintTop_toBottomOf="@+id/playing_track_title_wave" />

                    <carbon.widget.ImageView
                        android:id="@+id/playing_next_track_wave"
                        android:layout_width="55dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="5dp"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/next_track"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onPlayingNextTrackClicked()}"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:scaleType="fitCenter"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        app:carbon_elevation="80dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_rippleColor="@{view_model.params.fontColor}"
                        app:carbon_rippleStyle="over"
                        app:carbon_src="@android:drawable/ic_media_next"
                        app:carbon_tint="@{view_model.params.fontColor}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <carbon.widget.ImageView
                        android:id="@+id/playing_play_button_wave"
                        android:layout_width="55dp"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/play_button"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onPlayingPlayButtonClicked()}"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:scaleType="fitCenter"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        app:carbon_elevation="80dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_rippleColor="@{view_model.params.fontColor}"
                        app:carbon_rippleStyle="over"
                        app:carbon_src="@android:drawable/ic_media_play"
                        app:carbon_tint="@{view_model.params.fontColor}"
                        app:layout_constraintBottom_toBottomOf="@+id/playing_next_track_wave"
                        app:layout_constraintEnd_toStartOf="@+id/playing_next_track_wave"
                        app:layout_constraintTop_toTopOf="@+id/playing_next_track_wave"
                        app:layout_constraintVertical_bias="0.0" />

                    <carbon.widget.ImageView
                        android:id="@+id/playing_prev_track_wave"
                        android:layout_width="55dp"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/previous_track"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onPlayingPrevTrackClicked()}"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:scaleType="fitCenter"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        app:carbon_elevation="80dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.fontColor)}"
                        app:carbon_rippleColor="@{view_model.params.fontColor}"
                        app:carbon_rippleStyle="over"
                        app:carbon_src="@android:drawable/ic_media_previous"
                        app:carbon_tint="@{view_model.params.fontColor}"
                        app:layout_constraintBottom_toBottomOf="@+id/playing_play_button_wave"
                        app:layout_constraintEnd_toStartOf="@+id/playing_play_button_wave"
                        app:layout_constraintTop_toTopOf="@+id/playing_play_button_wave"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/track_layout_wave"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:scrollbarThumbHorizontal="@null"
                android:scrollbarThumbVertical="@null"
                android:scrollbarTrackVertical="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="-64dp">

                <com.gauravk.audiovisualizer.visualizer.WaveVisualizer
                    android:id="@+id/visualizer_wave"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="50dp"
                    android:visibility="@{view_model.params.isVisualizerShown ? View.VISIBLE : View.INVISIBLE}"
                    app:avDensity="1"
                    app:avType="fill"
                    app:layout_constraintBottom_toBottomOf="@+id/track_playing_bar_wave"
                    app:layout_constraintEnd_toEndOf="@+id/track_playing_bar_wave"
                    app:layout_constraintStart_toStartOf="@+id/track_playing_bar_wave"
                    app:layout_constraintTop_toTopOf="@+id/album_picture_wave" />

                <carbon.widget.ImageView
                    android:id="@+id/track_settings_button_wave"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@null"
                    android:clickable="true"
                    android:contentDescription="@string/track_settings_button"
                    android:focusable="true"
                    android:onClick="@{(v) -> view_model.onTrackSettingsButtonClicked(v)}"
                    android:alpha="0"
                    android:padding="5dp"
                    android:paddingStart="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:scaleType="fitCenter"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    app:carbon_cornerRadius="30dp"
                    app:carbon_elevation="50dp"
                    app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_rippleColor="@{view_model.params.primaryColor}"
                    app:carbon_rippleStyle="over"
                    app:carbon_src="@drawable/three_dots"
                    app:carbon_tint="@{view_model.params.primaryColor}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <carbon.widget.ImageView
                    android:id="@+id/album_picture_wave"
                    android:layout_width="450dp"
                    android:layout_height="450dp"
                    android:layout_marginStart="50dp"
                    android:alpha="0"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/album_cover"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    android:visibility="@{view_model.params.isCoverHidden ? View.INVISIBLE : View.VISIBLE}"
                    android:scaleType="fitXY"
                    app:carbon_cornerRadius="@{view_model.params.isRoundingPlaylistImage ? 20 : 0}"
                    app:carbon_elevation="80dp"
                    app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                    app:carbon_src="@drawable/album_default"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <SeekBar
                    android:id="@+id/track_playing_bar_wave"
                    style="@android:style/Widget.DeviceDefault.SeekBar"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="150dp"
                    android:background="@null"
                    android:drawingCacheQuality="@null"
                    android:indeterminateDrawable="@null"
                    android:paddingTop="50dp"
                    android:paddingBottom="10dp"
                    android:progressTint="@{view_model.params.primaryColor}"
                    android:saveEnabled="true"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    android:thumbTint="@{view_model.params.primaryColor}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/album_picture_wave"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/current_time_wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:breakStrategy="simple"
                    android:fontFamily="sans-serif"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    android:text="@string/current_time"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintStart_toStartOf="@+id/track_playing_bar_wave"
                    app:layout_constraintTop_toBottomOf="@+id/track_playing_bar_wave" />

                <TextView
                    android:id="@+id/track_length_wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:breakStrategy="@null"
                    android:fontFamily="sans-serif"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    android:text="@null"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textColorHighlight="@null"
                    android:textColorHint="@null"
                    android:textColorLink="@null"
                    android:textCursorDrawable="@null"
                    android:textSize="16sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="@+id/track_playing_bar_wave"
                    app:layout_constraintTop_toBottomOf="@+id/track_playing_bar_wave" />

                <TextView
                    android:id="@+id/track_title_big_wave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@null"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textSize="24sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="@+id/track_playing_bar_wave"
                    app:layout_constraintStart_toStartOf="@+id/track_playing_bar_wave"
                    app:layout_constraintTop_toBottomOf="@+id/current_time_wave" />

                <TextView
                    android:id="@+id/artists_album_wave"
                    style="@style/Widget.AppCompat.TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif"
                    android:gravity="top"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@null"
                    android:textColor="@{view_model.params.fontColor}"
                    android:textSize="16sp"
                    android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                    app:layout_constraintEnd_toEndOf="@+id/track_title_big_wave"
                    app:layout_constraintStart_toStartOf="@+id/track_title_big_wave"
                    app:layout_constraintTop_toBottomOf="@+id/track_title_big_wave" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/primary_buttons_wave"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/secondary_buttons_wave"
                    app:layout_constraintEnd_toEndOf="@+id/secondary_buttons_wave"
                    app:layout_constraintStart_toStartOf="@+id/secondary_buttons_wave">

                    <carbon.widget.ImageView
                        android:id="@+id/play_button_wave"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/play_button"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onPlayButtonClicked()}"
                        android:scaleType="fitCenter"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        android:visibility="visible"
                        app:carbon_elevation="50dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_rippleColor="@{view_model.params.primaryColor}"
                        app:carbon_rippleStyle="over"
                        app:carbon_tint="@{view_model.params.primaryColor}"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:carbon_src="@drawable/play" />

                    <carbon.widget.ImageView
                        android:id="@+id/previous_track_button_wave"
                        style="@style/Widget.AppCompat.ImageButton"
                        android:layout_width="80dp"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/previous_track"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onPrevTrackButtonClicked()}"
                        android:scaleType="fitCenter"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        app:carbon_elevation="50dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_rippleColor="@{view_model.params.primaryColor}"
                        app:carbon_rippleStyle="over"
                        app:carbon_src="@drawable/prev_track"
                        app:carbon_tint="@{view_model.params.primaryColor}"
                        app:layout_constraintBottom_toBottomOf="@+id/play_button_wave"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/play_button_wave" />

                    <carbon.widget.ImageView
                        android:id="@+id/next_track_button_wave"
                        android:layout_width="80dp"
                        android:layout_height="0dp"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/next_track"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onNextTrackButtonClicked()}"
                        android:scaleType="fitCenter"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        app:carbon_elevation="50dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_rippleColor="@{view_model.params.primaryColor}"
                        app:carbon_rippleStyle="over"
                        app:carbon_src="@drawable/next_track"
                        app:carbon_tint="@{view_model.params.primaryColor}"
                        app:layout_constraintBottom_toBottomOf="@+id/play_button_wave"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/play_button_wave" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/secondary_buttons_wave"
                    android:layout_width="450dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/album_picture_wave">

                    <carbon.widget.ImageView
                        android:id="@+id/equalizer_button_wave"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="bottom|start|top|end"
                        android:layout_weight="1"
                        android:background="@null"
                        android:clickable="true"
                        android:contentDescription="@string/equalizer"
                        android:focusable="true"
                        android:onClick="@{() -> view_model.onEqualizerButtonClicked()}"
                        android:padding="5dp"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:scaleType="fitXY"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        app:carbon_elevation="50dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
