<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="view_model"
            type="com.dinaraparanid.prima.viewmodels.mvvm.MainActivityViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:scrollbarThumbHorizontal="@null"
        android:scrollbarThumbVertical="@null"
        android:scrollbarTrackVertical="@null"
        tools:openDrawer="start">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/main_coordinator_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackVertical="@null"
            tools:context=".MainActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <carbon.beta.AppBarLayout
                    android:id="@+id/appbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@{view_model.params.backgroundImage == null ? view_model.params.primaryColor : android.R.color.transparent}"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:carbon_cornerRadiusBottomEnd="15dp"
                    app:carbon_cornerRadiusBottomStart="15dp">

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/switch_toolbar"
                        style="@style/NoActionBar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@{view_model.params.backgroundImage == null ? view_model.params.primaryColor : android.R.color.transparent}"
                        android:elevation="5dp"
                        android:scrollbarThumbHorizontal="@null"
                        android:scrollbarThumbVertical="@null"
                        android:scrollbarTrackVertical="@null"
                        app:carbon_icon="@null"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        app:subtitleTextAppearance="@null"
                        app:subtitleTextColor="@null"
                        app:titleTextColor="@null">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbarThumbHorizontal="@null"
                            android:scrollbarThumbVertical="@null"
                            android:scrollbarTrackVertical="@null">

                            <TextView
                                android:id="@+id/main_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:breakStrategy="simple"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:minLines="1"
                                android:scrollbarThumbHorizontal="@null"
                                android:scrollbarThumbVertical="@null"
                                android:scrollbarTrackHorizontal="@null"
                                android:scrollbarTrackVertical="@null"
                                android:text="@string/tracks"
                                android:textColor="@{view_model.params.fontColor}"
                                android:textColorHighlight="@null"
                                android:textColorHint="@null"
                                android:textColorLink="@null"
                                android:textCursorDrawable="@null"
                                android:textSize="20sp"
                                android:typeface="@{view_model.params.getFontFromName(view_model.params.font)}"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.appcompat.widget.Toolbar>

                    <carbon.widget.Toolbar
                        android:id="@+id/select_fragment_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@{view_model.params.backgroundImage == null ? view_model.params.secondaryColor : android.R.color.transparent}"
                        android:visibility="gone"
                        app:carbon_elevation="30dp"
                        app:carbon_elevationAmbientShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_elevationSpotShadowColor="@{view_model.params.getBloomOrTransparent(view_model.params.primaryColor)}"
                        app:carbon_icon="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <carbon.widget.LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            app:carbon_elevation="30dp"
                            app:layout_constraintBottom_toBottomOf="@+id/select_fragment_toolbar"
                            app:layout_constraintEnd_toEndOf="@+id/select_fragment_toolbar"
                            app:layout_constraintStart_toStartOf="@+id/select_fragment_toolbar"
                            app:layout_constraintTop_toTopOf="@+id/select_fragment_toolbar">

                            <carbon.widget.LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                app:carbon_elevation="0dp">

                                <carbon.widget.TextView
                                    android:id="@+id/select_first"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@{view_model.params.secondaryColor}"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:breakStrategy="simple"
                                    android:elegantTextHeight="true"
                                    android:gravity="center"
                                    android:scrollbarThumbHorizontal="@null"
                                    android:scrollbarThumbVertical="@null"
                                    android:scrollbarTrackHorizontal="@null"
                                    android:scrollbarTrackVertical="@null"
                                    android:textAllCaps="false"
                                    android:textColor="@{view_model.params.fontColor}"
                                    android:textColorHighlight="@null"
                                    android:textColorHint="@null"
                                    android:textColorLink="@null"
                                    android:textCursorDrawable="@null"
                                    android:textSize="20sp"
                                    app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
                                    app:carbon_rippleColor="@{view_model.params.primaryColor}"
                                    app:carbon_rippleStyle="over"
                                    app:carbon_tint="@{view_model.params.primaryColor}"/>

                                <carbon.widget.TextView
                                    android:id="@+id/select_second"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@{view_model.params.secondaryColor}"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:breakStrategy="simple"
                                    android:elegantTextHeight="true"
                                    android:gravity="center"
                                    android:scrollbarThumbHorizontal="@null"
                                    android:scrollbarThumbVertical="@null"
                                    android:scrollbarTrackHorizontal="@null"
                                    android:scrollbarTrackVertical="@null"
                                    android:textAllCaps="false"
                                    android:textColor="@{view_model.params.fontColor}"
                                    android:textColorHighlight="@null"
                                    android:textColorHint="@null"
                                    android:textColorLink="@null"
                                    android:textCursorDrawable="@null"
                                    android:textSize="20sp"
                                    app:carbon_font="@{view_model.params.getFontFromName(view_model.params.font)}"
                                    app:carbon_rippleColor="@{view_model.params.primaryColor}"
                                    app:carbon_rippleStyle="over"
                                    app:carbon_tint="@{view_model.params.primaryColor}"/>

                            </carbon.widget.LinearLayout>

                            <carbon.widget.LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                app:carbon_elevation="0dp">

                                <View
                                    android:id="@+id/highlight_first"
                                    android:layout_width="0dp"
                                    android:layout_height="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/transparent"/>

                                <View
                                    android:id="@+id/highlight_second"
                                    android:layout_width="0dp"
                                    android:layout_height="5dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/transparent"/>

                            </carbon.widget.LinearLayout>

                        </carbon.widget.LinearLayout>

                    </carbon.widget.Toolbar>

                </carbon.beta.AppBarLayout>

                <FrameLayout
                    android:id="@+id/fragment_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbarThumbHorizontal="@null"
                    android:scrollbarThumbVertical="@null"
                    android:scrollbarTrackVertical="@null"
                    android:visibility="visible"
                    tools:context=".MainActivity" />

            </LinearLayout>

            <include
                android:id="@+id/playing_layout_bar"
                layout="@layout/playing_bar" />

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            style="@style/NavigationTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start|top"
            android:background="@{view_model.params.secondaryColor}"
            android:fitsSystemWindows="true"
            android:scrollbarThumbHorizontal="@null"
            android:scrollbarThumbVertical="@null"
            android:scrollbarTrackVertical="@null"
            app:itemTextColor="@{view_model.params.fontColor}"
            app:insetForeground="@null"
            app:itemIconSize="30sp"
            app:itemTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:menu="@menu/activity_main_drawer" />

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
